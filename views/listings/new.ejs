<% layout("/layouts/boilerplate.ejs") -%>
<link rel="stylesheet" href="/css/newlisting.css">

<body>
   
    <div class="listing-form-page">
    <!-- <div class="row"> -->
    <!-- <div class="col-8 offset-2"> -->
    
    <h2 class="create">Create new listing</h2>

    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">       
        
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="title" class="form-control title req" minlength="10" maxlength="36" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Title should be valid</div>
            <span class="span-title">0/36</span>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="description" class="form-control description req" minlength="50" maxlength="200"  required></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a short description</div>
            <span class="span-description">0/200</span>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Image (Cover image)</label>
            <input type="file" name="listing[images]" class="form-control req" required accept="image/*">
            <div class="invalid-feedback">Please select listing image</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image (Bedroom image)</label>
            <input type="file" name="listing[images]" class="form-control req" required accept="image/*">
            <div class="invalid-feedback">Please select listing image</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image (Graden image)</label>
            <input type="file" name="listing[images]" class="form-control req" required accept="image/*">
            <div class="invalid-feedback">Please select listing image</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image (Balcony image)</label>
            <input type="file" name="listing[images]" class="form-control req" required accept="image/*">
            <div class="invalid-feedback">Please select listing image</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image (Kitchen image)</label>
            <input type="file" name="listing[images]" class="form-control req" required accept="image/*">
            <div class="invalid-feedback">Please select listing image</div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-6">
                <label for="price" class="form-label">Price</label>
                <% let v = 0; %>
                <input type="number" name="listing[price]" class="form-control req" id="price"
                min="<%= v = Number(currencyConverter(1000, "INR", currUser ? currUser.countryInfo.currency : "INR").replace(/[^\d.]/g, "")) %>" 
                max="<%= Number(currencyConverter(25000, "INR", currUser ? currUser.countryInfo.currency : "INR").replace(/[^\d.]/g, "")) %>"
                placeholder="<%= currUser.countryInfo.currency %> <%= v %>" step="any" required>
                <div class="invalid-feedback">Price should be valid (between <%= Number(currencyConverter(1000, "INR", currUser ? currUser.countryInfo.currency : "INR").replace(/[^\d.]/g, "")) %> to
                    <%= Number(currencyConverter(25000, "INR", currUser ? currUser.countryInfo.currency : "INR").replace(/[^\d.]/g, "")) %>)
                </div>
            </div>
            <div class="mb-3 col-md-6">
                <label for="currency" class="form-label">Currency</label>
                <select name="listing[currency]" id="currency" class="form-select req" required>
                    <option disabled selected value="">Select currency type (<%= currUser.countryInfo.currency %>)</option>
                </select>
                <!-- <input type="text" name="listing[currency]" placeholder="<%= currUser.countryInfo.currency %>" class="form-control" id="currency" required> -->
                <div class="invalid-feedback">Currency should be valid</div>
            </div>   
        </div>

        <div class="row">
            <div class="mb-3  col-md-6">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="<%= currUser.countryInfo.country %>" class="form-control req" id="country" required>
                <div class="invalid-feedback">Country should be valid</div>
            </div>
            <div class="mb-3  col-md-6">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="<%= currUser.countryInfo.city %>, (<%= currUser.countryInfo.region %>)" class="req form-control" id="location" required>
                <div class="invalid-feedback">Location should be valid</div>
            </div>
        </div>

        <h2 class="about-place">About your place</h2>

        <div class="house-type-options-div">

