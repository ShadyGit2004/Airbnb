            <input type="radio" class="req" name="listing[houseType]" value="tower house" id="tower" required>
            <label for="nature">Nature <i class="fa-solid fa-tree"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="nature house" id="nature" required>
            <label for="mountain">Mountain <i class="fa-solid fa-mountain-sun"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="mountain house" id="mountain" required>
            <label for="beach">Beach <i class="fa-solid fa-umbrella-beach"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="beach house" id="beach" required>
            <label for="igloo">Igloo <i class="fa-solid fa-igloo"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="igloo" id="igloo" required>
            <label for="sunnyTown">Sunny Town <i class="fa-solid fa-cloud-sun"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="sunnyTown house" id="sunnyTown" required>
            <label for="city">City <i class="fa-solid fa-city"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="city house" id="city" required>
