            <input type="radio" class="req" name="listing[houseType]" value="hotel" id="hotel" required>
            <label for="building">Building <i class="fa-solid fa-building"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="building" id="building" required>
