            <input type="radio" class="req" name="listing[houseType]" value="pool" id="pool" required>
            <label for="room">Room <i class="fa-solid fa-bed"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="room" id="room" required>
            <label for="dome">Dome <i class="fa-solid fa-landmark-dome"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="dome" id="dome" required>
            <label for="ship">Ship<i class="fa-solid fa-ship"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="ship" id="ship" required>
