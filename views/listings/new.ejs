            <label for="flat">Flat <i class="fa-solid fa-building"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="flat" id="flat" required>
            <label for="farm">Farm <i class="fa-solid fa-tractor"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="farm" id="farm" required>
            <label for="cabin">Cabin <i class="fa-solid fa-house-laptop"></i></label>            
            <input type="radio" class="req" name="listing[houseType]" value="cabin" id="cabin" required>
