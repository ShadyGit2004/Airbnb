<style>
    .form-box {
      /* font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif; */
      padding: 40px;
      display: flex;
      justify-content: center;
    }

    .message-box {
      width: 100%;
      max-width: 550px;
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 2px 20px rgba(0,0,0,0.09);
    }

    h2 {
      margin-top: 0;
      font-size: 28px;
      font-weight: 700;
      color: #333;
    }

    label {
      font-weight: 600;
      margin-bottom: 6px;
      display: block;
    }

    input, textarea {
      width: 100%;
      padding: 14px;
      margin-bottom: 20px;
      border: 1px solid #ddd;
      border-radius: 10px;
      font-size: 16px;
    }

    textarea {
      resize: vertical;
      min-height: 130px;
    }

    button {
      background: #FF385C;
      color: white;
      font-size: 17px;
      padding: 14px 22px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      font-weight: 600;
      width: 100%;
    }

    button:hover {
      background: #e03052;
    }
  </style>
  <body>
   <div class="form-box">
    <form class="message-box" action="/message-host/<%= currUser._id %>/<%= listing.owner._id %>" method="POST">
        <h2>Contact the Host</h2>
    
        <label>Your Name</label>
        <input type="text" name="name" placeholder="Enter your name" required />
    
        <label>Your Email</label>
        <input type="email" name="email" placeholder="Enter your email" required />
    
        <label>Your Message</label>
        <textarea name="message" placeholder="Write your message to the hostâ€¦" required></textarea>
    
        <button type="submit">Send Message</button>
      </form>
   </div>
  </body>

 