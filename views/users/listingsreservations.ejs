/* ðŸŒŸ Shimmer Effect */
.shimmer-card {
  width: 32%;
  height: 240px;
  background: #e2e2e2;
  border-radius: 10px;
  position: relative;
  overflow: hidden;
}

.shimmer-card::before {
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    #e2e2e2 0%,
    #f5f5f5 50%,
    #e2e2e2 100%
  );
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

@media (max-width: 992px) {
  .card,
  .shimmer-card {
    width: 48%;
  }
  .reservations-page{
        padding-inline: 8vw;
    }
}

@media (max-width: 600px) {
  .card,
  .shimmer-card {
    width: 100%;
  }
  .reservations-page{  
        padding-inline: 4vw;
    }

}

.reservations-details{
  width: 100%;
  padding: 1rem 0;
  margin-top: 3rem;
  display: none;
}
.selected-btn{
  text-underline-offset: 1rem;
  text-decoration: 5px black underline;  
}

