    </div>
   
      
      <script>

        let btns = document.querySelectorAll(".reservations-category h5");
        let reservationsDetails = document.querySelectorAll(".reservations-details");

        reservationsDetails[0].style.display = "block"; 
        btns[0].classList.add("selected-btn");

        btns.forEach((btn, idx)=>{

          btn.addEventListener("click", ()=>{
            btns.forEach((b)=>{b.classList.remove("selected-btn")})
            reservationsDetails.forEach((r)=>{r.style.display = "none"})
            reservationsDetails[idx].style.display = "block";
            btn.classList.add("selected-btn");
          });
          
        });       




