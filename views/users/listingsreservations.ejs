<body>
    <div class="reservations-page">        
        <h2>My listings reservations</h2>
        <div class="reservations-category">
          <h5>upcoming</h5> &nbsp;&nbsp;
          <h5>completed</h5>&nbsp;&nbsp;
          <h5>cancelled</h5>&nbsp;&nbsp;
          <h5>all</h5>
        </div> 

      <div class="upcoming reservations-details">


        <% if(!reservations.length > 0) { %>          
          <h6>No reservations </h6>
        <% } else { %>  
        <div class="custom-card-container">
            <% reservations.forEach(reservation => { %>
              <div class="custom-card">
                <img src="<%= reservation.listingId.images[0].path %>" alt="<%= reservation.listingId.title %>">
                <div class="custom-card-body">
                  <h3><%= reservation.listingId.title %></h3>
                  <p class="location"><%= reservation.listingId.location %> (<%= reservation.listingId.country %>)</p>
                  <p class="price">
                    <% if("INR" != (currUser?.countryInfo?.currency || "INR")) { %>
                    <%= currencyConverter(reservation.listingId.price, "INR", currUser?.countryInfo?.currency || "INR") %> / night
                    <% } else { %>
                     <%= Number(reservation.listingId.price).toLocaleString(navigator.language || "en-IN", {style : "currency", currency : currUser?.countryInfo?.currency || "INR"}) %> / night
                    <% } %>
                  </p>
                  <p class="location">
                    <b>Booking info</b>  <br>
                    Booked by : <%= reservation.guestId.username %> <br>
                    Booked at : <%= reservation.bookedAt.toLocaleString() %> <br>
                    Check in date : <%= reservation.checkIn.toLocaleDateString() %> (<%= reservation.listingId.houseRules.checkIn %>) <br>
                    Check out date : <%= reservation.checkOut.toLocaleDateString() %> (<%= reservation.listingId.houseRules.checkOut %>) <br>
                    Stay : <%= reservation.stayDays > 1 ? reservation.stayDays + " days" : reservation.stayDays + " day" %> <br>
                    Location : <%= reservation.guestId.countryInfo.city %>, <%= reservation.guestId.countryInfo.region %> (<%= reservation.guestId.countryInfo.country %>)<br>
                    Email : <%= reservation.guestId.email%>
                  </p>
                   <p class="price">Total amount : 
                    <% if("INR" != (currUser?.countryInfo?.currency || "INR")) { %>
                    <%= currencyConverter(reservation.totalAmount, "INR", currUser?.countryInfo?.currency || "INR") %>
                    <% } else { %>
                     <%= Number(reservation.totalAmount).toLocaleString(navigator.language || "en-IN", {style : "currency", currency : currUser?.countryInfo?.currency || "INR"}) %>
                    <% } %>
                  </p>
                  <div class="custom-actions" style="margin-top: auto; margin-left: auto;">
                    <form action="/listings/<%= currUser._id %>/book/cancel/<%= reservation._id %>?_method=DELETE" method="POST">
                      <!-- <button type="submit" class="soft-delete-btn">Cancel</button> -->
                      <button type="submit" class="btn btn-dark btn-sm mt-2" style="font-size: .8rem;">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>
            <% }) %>
         </div>
        <% } %>

      </div>

      <div class="completed reservations-details">completed reservations</div>
      <div class="cancelled reservations-details">cancelled reservations</div>
      <div class="all reservations-details">all reservations</div>
          <!-- <div id="card-container" class="card-container">
            <div class="shimmer-card"></div>
            <div class="shimmer-card"></div>
            <div class="shimmer-card"></div>
