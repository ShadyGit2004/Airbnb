<%- layout("/layouts/boilerplate.ejs")  %>
<link rel="stylesheet" href="css/signup.css">
<body>
    <div id="signup-wrap">
        <div id="signup-pannel">
            <div id="singup-headings">
                <h5>Log in </h5>
            </div>
            <form action="/login" method="post" class="needs-validation" novalidate>
                <h4>Welcome to Airbnb</h4>
               
                <div id="inputs">
                    <label for="username" class="form-label">Username</label>  
                    <input type="text" name="username" id="username" class="form-control" required>         
                    <div class="invalid-feedback">Username is required</div>

                    <label for="password" class="form-label">Password</label>  
                    <input type="password" name="password" id="password" class="form-control" required>         
                    <div class="invalid-feedback">Password is required</div>
                </div>

                <div style="margin-bottom: 1.5rem;">
                    <h5 style="font-size: .85rem;">Don't have an account ? <a href="/signup">Sign up</a></h5>
                </div>

                <button class="login-btn">Continue</button>
            </form>
        </div>
    </div>
    <script>        
        document.title = `Login | Airbnb`;
      document.querySelector("#nav-search-box").hidden = true;
    </script>   
</body>
